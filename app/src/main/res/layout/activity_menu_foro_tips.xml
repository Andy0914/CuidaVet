<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuForoTips">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/atras"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_50"
        app:maxImageSize="50dp"
        app:tint="@color/yellow"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/foro"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="-15dp"
        android:text="Foro"
        android:textColor="@color/pink"
        app:cornerRadius="40dp"
        app:strokeColor="@color/pink" />

    <Button
        android:id="@+id/Tips"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="-301dp"
        android:text="Tips"
        android:textColor="@color/pink"
        app:cornerRadius="40dp"
        app:strokeColor="@color/pink" />

    <Button
        android:id="@+id/HabitosSaludables"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="-301dp"
        android:text="Hábitos Saludables"
        android:textColor="@color/pink"
        app:cornerRadius="40dp"
        app:strokeColor="@color/pink" />

    <Button
        android:id="@+id/Gestacion"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="-301dp"
        android:text="Gestación"
        android:textColor="@color/pink"
        app:cornerRadius="40dp"
        app:strokeColor="@color/pink" />

    <TextView
        android:id="@+id/forotips"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="-250dp"
        android:text="Foro y Tips"
        android:background="@drawable/text_ovalado"
        />

</LinearLayout>