<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AgregarMascota">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/atras"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="68dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_50"
        app:maxImageSize="50dp"
        app:tint="@color/yellow"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/perro"
        android:layout_width="137dp"
        android:layout_height="116dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="136dp"
        android:layout_marginTop="103dp"
        android:layout_marginEnd="136dp"
        app:srcCompat="@drawable/entrenamiento_1entrenamiento4" />

    <ImageButton
        android:id="@+id/imageButton"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="243dp"
        android:layout_marginTop="201dp"
        android:layout_marginEnd="117dp"
        app:srcCompat="@drawable/ic_baseline_add_100"
        app:tint="@color/yellow" />

    <Button
        android:id="@+id/buttonNombre"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="153dp"
        android:layout_marginTop="315dp"
        android:layout_marginEnd="151dp"
        android:text="Nombre"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonEdad"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="386dp"
        android:layout_marginEnd="152dp"
        android:text="Edad"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonRaza"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="458dp"
        android:layout_marginEnd="152dp"
        android:text="Raza"
        android:textColor="@color/black" />


</RelativeLayout>