<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Tips">

  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/atras"
      style="?attr/materialButtonOutlinedStyle"
      android:layout_width="68dp"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="2dp"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:src="@drawable/ic_baseline_arrow_back_ios_50"
      app:maxImageSize="50dp"
      app:tint="@color/yellow"
      tools:ignore="SpeakableTextPresentCheck" />

  <TextView
      android:id="@+id/tituloTips"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_gravity="center"
      android:layout_marginTop="-50dp"
      android:text="¿Qué necesitas para ser el mejor dueño?"
      android:background="@drawable/text_ovalado"
      android:textColor="@color/white"
      />

  <TextView
      android:id="@+id/tip1"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="100dp"
      android:background="@drawable/text_ovalado_sinfondo"
      android:text="  Cepillo para el pelo" />

  <TextView
      android:id="@+id/tip2"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="  Shampoo"
      android:background="@drawable/text_ovalado_sinfondo"
      />

  <TextView
      android:id="@+id/tip3"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="  Correa y Collar"
      android:background="@drawable/text_ovalado_sinfondo"
      />

  <TextView
      android:id="@+id/tip4"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:background="@drawable/text_ovalado_sinfondo"
      android:text="  Cortauñas" />

  <TextView
      android:id="@+id/tip5"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:background="@drawable/text_ovalado_sinfondo"
      android:text="  Ropa para invierno" />

  <TextView
      android:id="@+id/tip6"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_gravity="center"
      android:background="@drawable/text_ovalado_sinfondo"
      android:text="  Cartilla de vacunación" />

  <TextView
      android:id="@+id/tip7"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="10dp"
      android:text="  App CuidaVet"
      android:background="@drawable/text_ovalado_sinfondo"
      />

  </LinearLayout>